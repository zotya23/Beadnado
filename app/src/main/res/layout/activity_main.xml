<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"> <!--IMPORTANT otherwise backgrnd img. will not fill the whole screen -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <TextView
            android:id="@+id/cim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:text="Szállások"
            android:textSize="25dp"
            android:textAlignment="center" />


        <ImageView
            android:id="@+id/kep1"
            android:layout_width="match_parent"
            android:layout_height="133dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="46dp"
            android:adjustViewBounds="true"
            android:src="@drawable/apartman1" />

        <Button
            android:id="@+id/android1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/kep1"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="6dp"

            android:layout_marginEnd="0dp"
            android:text="@string/foglal" />

        <ImageView
            android:id="@+id/kep2"
            android:layout_width="match_parent"
            android:layout_height="169dp"
            android:layout_below="@id/android1"
            android:layout_marginTop="13dp"
            android:src="@drawable/apartman2" />

        <Button
            android:id="@+id/android2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/kep2"
            android:layout_marginTop="20dp"
            android:text="@string/foglal" />

        <ImageView
            android:id="@+id/kep3"
            android:layout_width="match_parent"
            android:layout_height="164dp"
            android:layout_below="@id/android2"
            android:layout_marginTop="18dp"
            android:src="@drawable/haz" />

        <Button
            android:id="@+id/gomb3"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/kep3"

            android:layout_marginTop="20dp"
            android:text="@string/foglal" />
    </RelativeLayout>
</ScrollView>